
@{
    ViewData["Title"] = "UserEdit";
}
@model UserEditViewModel

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Istifadəçi yeniləmə</h2>

        @if (TempData["SuccessedMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessedMessage"]
            </div>
        }


        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>

        <form method="post" asp-controller="member" asp-action="useredit" enctype="multipart/form-data">
            <div class="row mb-3">
                <label for="PasswordOld" class="col-sm-2 col-form-label" asp-for="UserName"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="PasswordOld" asp-for="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="PasswordOld" class="col-sm-2 col-form-label" asp-for="Email"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="PasswordOld" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="PasswordOld" class="col-sm-2 col-form-label" asp-for="Phone"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="PasswordOld" asp-for="Phone">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="City " class="col-sm-2 col-form-label" asp-for="City"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="City" asp-for="City">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label for="BirthDate" class="col-sm-2 col-form-label" asp-for="BirthDate"></label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" id="BirthDate" asp-for="BirthDate">
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="Picture" class="col-sm-2 col-form-label" asp-for="Picture"></label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" id="Picture" asp-for="Picture">
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="Gender" class="col-sm-2 col-form-label" asp-for="Gender"></label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="Gender" asp-items="ViewBag.GenderList">
                        <option value="">Cinsiyyət seçin</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Yenilə</button>
                </div>
            </div>
        </form>

    </div>
</div>


