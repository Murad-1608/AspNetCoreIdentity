
@{
    ViewData["Title"] = "Index";
}
@model UserViewModel

<div class="row">
    <div class="col-md4 offset-md-3">
        <user-picture-thumbnail class="rounded text-center" style="width:300px; height:300px" picture-url="@Model.PictureUrl"></user-picture-thumbnail>
    </div>
</div>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h3>Istifadəçi məlumatları</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>İstifadəçi adı</th>
                    <th>Email</th>
                    <th>Telefon</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.PhoneNumber</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>




