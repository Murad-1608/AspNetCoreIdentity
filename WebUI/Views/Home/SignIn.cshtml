
@{
    ViewData["Title"] = "SignIn";
}
@model SignInViewModel
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>Giriş</h2>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>
        <form asp-controller="home" asp-action="signin" asp-route-returnUrl="@Context.Request.Query["returnUrl"]" method="post">
            <div class="row mb-3">
                <label for="Email" class="col-sm-2 col-form-label" asp-for="Email"></label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="Email" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Password" class="col-sm-2 col-form-label" asp-for="Password"></label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="Password" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="gridCheck1">
                        <label asp-for="RememberMe" class="form-check-label" for="gridCheck1">
                        </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <a asp-controller="home" asp-action="forgetpassword" class="btn btn-outline-secondary float-end">Şifrəmi unutdum</a>
                </div>
            </div>


            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">

                </div>
            </div>
            <button type="submit" class="btn btn-primary float-lg-start">Giriş</button>
        </form>
    </div>
</div>
