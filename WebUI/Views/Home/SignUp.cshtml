
@{
    ViewData["Title"] = "SignUp";
}
@model SignUpViewModel

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Istifadəçi qeydiyyat formu</h2>

        @if (TempData["SuccessedMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessedMessage"]
            </div>
        }


        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">

        </div>

        <form method="post" asp-controller="Home" asp-action="SignUp">
            <div class="row mb-3">
                <label for="UserName" class="col-sm-2 col-form-label" asp-for="UserName"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="UserName" asp-for="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Email" class="col-sm-2 col-form-label" asp-for="Email"></label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="Email" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Phone" class="col-sm-2 col-form-label" asp-for="Phone"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Phone" asp-for="Phone">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Password" class="col-sm-2 col-form-label" asp-for="Password"></label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="Password" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="PassConfirm" class="col-sm-2 col-form-label" asp-for="PasswordConfirm"></label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="PassConfirm" asp-for="PasswordConfirm">
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
            </div>
        </form>

    </div>
</div>




