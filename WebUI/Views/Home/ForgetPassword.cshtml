@{
    ViewData["Title"] = "Reset password";
}
@model ForgetViewModel
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="alert alert-info">
            Yeniləmə linki email hesabınıza göndəriləcəkdir
        </div>
        @if (TempData["SuccessedMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessedMessage"]
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>
        <form method="post">
            <div class="row mb-3">
                <label for="Email" class="col-sm-2 col-form-label" asp-for="Email"></label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="Email" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-end">Göndər</button>
        </form>
    </div>
</div>


