
@{
    ViewData["Title"] = "UserList";
}
@model List<AdminModel.UserViewModel>

<h1>İstifadəçi siyahısı</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Rollar</th>
            <th>Rol ilə bağlı</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    <user-role-names user-id="@item.Id"></user-role-names>
                </td>
                <td>
                    <a asp-controller="roles" asp-action="assignroletouser" asp-route-id="@item.Id">Rol mənimsət</a>
                </td>
            </tr>
        }
    </tbody>
</table>
