@model List<AdminModel.AssignRoleToUserViewModel>

@{
    ViewData["Title"] = "Assign role to user";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Rol mənimsətmək</h2>
        <form asp-action="AssignRoleToUser" method="post">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div>
                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exist" />
                    <label class="form-check-label">@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input type="hidden" asp-for="@Model[i].Id" />
                </div>
            }
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Dəyişdir</button>
            </div>

        </form>
        <div class="mt-3">
            <a asp-controller="home" asp-action="index">Rol listinə geri dön</a>
        </div>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
