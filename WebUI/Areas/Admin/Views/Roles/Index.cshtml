@model List<AdminModel.RoleViewModel>
@{
    ViewData["Title"] = "Index";
}




<div class="row">
    <div class="col-md-6 offset-md-2">
        <h2>Rollar</h2>
    </div>
    <div class="col-md-2">
        <a class="btn btn-primary" asp-controller="roles" asp-action="rolecreate">Rol əlavə et</a>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">

        @if (TempData["SuccessedMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessedMessage"]
            </div>
        }

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Rol</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><a asp-route-id="@item.Id" asp-controller="roles" asp-action="roleupdate" class="btn btn-success">Yenilə</a></td>
                        <td><a asp-route-id="@item.Id" asp-controller="roles" asp-action="roledelete" class="btn btn-danger">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


